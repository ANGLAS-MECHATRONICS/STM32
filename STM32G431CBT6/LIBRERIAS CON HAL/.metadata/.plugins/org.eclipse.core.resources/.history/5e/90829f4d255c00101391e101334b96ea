#ifndef __FONT_H
#define __FONT_H

#include "stdint.h"

typedef struct {
    const uint8_t width;
    uint8_t height;
    const uint16_t *data;
} FontDef;

//Font lib.
extern FontDef Font_6x8;  //todos caracteres letras, numeros y signos
extern FontDef Font_7x9;  //todos caracteres letras, numeros y signos
extern FontDef Font_7x10; //todos caracteres letras, numeros y signos
extern FontDef Font_11x18;//todos caracteres letras, numeros y signos
extern FontDef Font_16x26;//todos caracteres letras, numeros y signos
extern FontDef Font_16x28;//solo signos y numeros

extern FontDef Font_15x25;
extern FontDef Font_12x20;

//16-bit(RGB565) Image lib.
/*******************************************
 *             CAUTION:
 *   If the MCU onchip flash cannot
 *  store such huge image data,please
 *           do not use it.
 * These pics are for test purpose only.
 *******************************************/

/* 128x128 pixel RGB565 image */
extern const uint16_t saber[][128];
extern const uint16_t korn_128x320[128][320];
extern const uint16_t korn_170x320[170][320];

/* 240x240 pixel RGB565 image 
extern const uint16_t knky[][240];
extern const uint16_t tek[][240];
extern const uint16_t adi1[][240];
*/
#endif
