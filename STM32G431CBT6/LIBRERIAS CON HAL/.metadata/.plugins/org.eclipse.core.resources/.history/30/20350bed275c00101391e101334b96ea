  /*Configure GPIO pin Output Level */
  HAL_GPIO_WritePin(IN_TS3A5018_GPIO_Port, IN_TS3A5018_Pin, GPIO_PIN_RESET);

  /*Configure GPIO pin Output Level */
  HAL_GPIO_WritePin(GPIOB, ST7789_DC_Pin|ST7789_RST_Pin|CS_SD_Pin|ON_OFF_3V7_Pin, GPIO_PIN_RESET);

